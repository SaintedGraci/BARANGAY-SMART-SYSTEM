{
  "version": 2,
  "builds": [
    {
      "src": "client/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server/api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/login",
      "dest": "server/api/login.js"
    },
    {
      "src": "/api/register",
      "dest": "server/api/register.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/client/$1"
    }
  ]
}